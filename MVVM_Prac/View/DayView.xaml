<UserControl x:Class="MVVM_Prac.View.DayView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" d:DesignHeight="300"
             d:DesignWidth="300" Background="#2E3B4E">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
        <TextBlock Text="Is it day time?" FontSize="18" Margin="8" FontWeight="Bold" />
        <TextBlock FontSize="16" Text="{Binding CurrentConditions.IsDayTime}" Padding="5" Background="#3E4B5E"
                   TextAlignment="Center" Width="100" Height="40" VerticalAlignment="Center" />
    </StackPanel>
</UserControl>